<MainWidget>:
    GridLayout:
        cols: 1
        rows: 3
        FloatLayout:
            Image:
                source: 'src/logo.png'
                pos_hint: {'x': 0, 'y': 0}
                size_hint: .1, 1
            Button:
                id: SortButton
                text: "Сортировка"
                font_size: 20
                background_color: (0.4471, 0.0706, 0.651, 1)
                pos_hint: {'x': .1, 'y': 0}
                size_hint: .4, 1
                on_release:
                    root.manager.current = 'empty'
            Button:
                id: AllNotes
                text: "Записные книжки"
                font_size: 20
                pos_hint: {'x': .5, 'y': 0}
                size_hint: .3, 1
                background_color: (0.4471, 0.0706, 0.651, 1)
                on_release:
                    root.manager.current = 'empty'
            Button:
                id: SettingsButton
                text: "Настройки"
                font_size: 20
                pos_hint: {'x': .8, 'y': 0}
                size_hint: .2, 1
                background_color: (0.4471, 0.0706, 0.651, 1)
                on_release:
                    root.manager.current = 'empty'
        ScrollView:
            pos_hint: {'top': 1}
            size_hint_y: 10
            GridLayout:
                cols: 1
                size_hint_y: None
                padding: 5
                spacing: 10
                #TODO: Добавить вывод данных на лейбле и возможность кликать по ним.
                Button:
                    id: TextButton
                    size_hint: 1, None
                    size: 0, 60
                    font_size: 19
                    background_color: (0, 0.8235, 0.5255, 1)
                    on_release:
                        root.manager.current = 'empty'
        AnchorLayout:
            Button:
                id: CreateNote
                text: "Создать запись"
                font_size: 20
                background_color: (0.4471, 0.0706, 0.651, 1)
                anchor_x: 'center'
                anchor_y: 'bottom'
                size_hint: .5, 1
                on_release:
                    root.manager.current = 'edit'
<EditTextWidget>:
    padding: 5
    spacing: 5
    orientation: 'vertical'
    header: HeaderNote
    body: BodyNote
    GridLayout:
        rows: 3
        BoxLayout:
            pos_hint: {'top': 0.92}
            size_hint: 1, 0.07
            size: root.width, root.height
            TextInput:
                id: HeaderNote
                multiline: False
                font_size: 20
                hint_text: 'Заголовок заметки'
                background_color: (0.9804, .9765, 0.9725)
        BoxLayout:
            pos_hint: {'top': 1}
            size_hint: 1, .1
            padding: 5
            spacing: 5
            orientation: 'horizontal'
            size: root.width, root.height
            Button:
                id: SaveNote
                size_hint: 1, 1
                text: 'Сохранить'
                font_size: 20
                background_color: (0.4471, 0.0706, 0.651, 1)
                on_release:
                    root.save(HeaderNote, BodyNote)
                    root.manager.current = 'main'
            Button:
                id: DeleteNote
                size_hint: 1, 1
                text: 'Удалить'
                font_size: 20
                background_color: (0.4471, 0.0706, 0.651, 1)
                on_release:
                    #TODO: Добавить метод удаления заметки
                    root.delete(HeaderNote)
                    root.manager.current = 'main'
        BoxLayout:
            pos_hint: {'top': 0.92}
            size_hint: 1, 0.92
            #orientation: 'hori'
            size: root.width, root.height
            TextInput:
                id: BodyNote
                multiline: True
                font_size: 15
                hint_text: 'Текст заметки'
                background_color: (0.9804, .9765, 0.9725, 1)
<EmptyPage>:
    padding: 5
    spacing: 5
    orientation: 'vertical'
    Label:
        text: 'В разработке'
        size_hint: 1, .9
    Button:
        size_hint: 1, .1
        text: 'Вернуться'
        on_release:
            root.manager.current = 'main'
