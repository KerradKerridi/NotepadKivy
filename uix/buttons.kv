<AnotherButton>:
    id: root.id
    #head: head
    #body: body
    #spacing: 6
    padding: 5
    orientation: 'vertical'
    #TODO: Вернуться к этому решению с функцией коллбек
    #on_release: root.events_callback()
    canvas.before:
        Color:
            rgba: 0, .8235, .5255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: head
        font_size: '25'
        text: root.head
    Label:
        id: body
        font_size: '18'
        text: root.body

